<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.accherniakocich.android.freecourier.Activityes.Chat.Chat">
    <TextView
        android:layout_margin="10dp"
        android:textColor="#000"
        android:textSize="22sp"
        android:gravity="center"
        android:text="@string/messageFromAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TableRow
        android:id="@+id/chat_admin_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edit_text_chat"
            android:hint="@string/enter_a_message"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/image_button_send_message_chat"
            android:src="@drawable/ic_menu_send"
            android:layout_weight="2.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </TableRow>
    <ListView
        android:stackFromBottom="true"
        android:id="@+id/list_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>
