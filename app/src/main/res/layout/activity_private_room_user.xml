<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activityes.ActivitiesInNavMenu.PrivateRoomUser">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/edit_user_name"
                android:fontFamily="sans-serif-condensed"
                android:textSize="25sp"
                android:textColor="#161616"
                android:gravity="center"
                android:text="Иванов Иван Иванович"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/edit_user_email"
                android:textColor="#000"
                android:layout_marginEnd="20dp"
                android:gravity="end"
                android:text="example@mail.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/edit_user_number_phone"
                android:textColor="#000"
                android:layout_marginEnd="20dp"
                android:gravity="end"
                android:text="+36558522"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#000"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:text="Созданные услуги"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
    <ListView
        android:id="@+id/edit_user_list_ads_created"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"/>
</LinearLayout>